{
  "variables": {
    "iso_folder": "/Users/RLB/Dropbox/Software/ISO"
  },

  "builders": [{
    "name": "centos7_{{isotime \"200601021504\"}}",
    "type": "vmware-iso",
    "iso_urls": [
      "{{user `iso_folder`}}/CentOS-7-x86_64-DVD-1503-01.iso"
    ],
    "iso_checksum": "99e450fb1b22d2e528757653fcbf5fdc",
    "iso_checksum_type": "md5",
    "http_directory": "http_files",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks_centos7.cfg<enter><wait>"
    ],
    "headless": true,
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],

  "provisioners": [
    {
      "type": "file",
      "source": "linux.iso",
      "destination": "/home/vagrant/linux.iso"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/update.sh",
        "scripts/vmtools.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "override": {
        "vmware": {
          "output": "centos-7-x86_x64-vmware.box"
        }
      }
    }
  ] 
}
